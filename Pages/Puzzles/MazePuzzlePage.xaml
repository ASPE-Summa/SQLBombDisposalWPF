                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="2" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="3" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="4" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="0" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="3" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="4" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="0" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="1" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="2" Foreground="Black"  FontSize="45" TextAlignment="Center" Text="."></TextBlock>
